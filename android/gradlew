#!/usr/bin/env sh

# SPDX-License-Identifier: Apache-2.0

# ------------------------------------------------------
# Gradle start up script for UN*X
# ------------------------------------------------------

APP_BASE_NAME=${0##*/}
APP_BASE_NAME=${APP_BASE_NAME%.sh}

APP_HOME=$( cd "${0%/*}" && pwd -P )
CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar
PROPERTIES=$APP_HOME/gradle/wrapper/gradle-wrapper.properties

DEFAULT_JVM_OPTS="-Xmx64m -Xms64m"
MAX_FD=maximum

warn () {
    echo "$*"
}

die () {
    echo "$*" >&2
    exit 1
}

# Download gradle-wrapper.jar when it is not committed to source control.
ensure_wrapper_jar() {
    [ -f "$CLASSPATH" ] && return

    WRAPPER_VERSION=$(sed -n 's/^distributionUrl=.*gradle-\([0-9][0-9.]*\).*/\1/p' "$PROPERTIES" | head -n 1)
    [ -z "$WRAPPER_VERSION" ] && WRAPPER_VERSION=8.14.3

    WRAPPER_URL="https://repo.gradle.org/gradle/public/org/gradle/gradle-wrapper/${WRAPPER_VERSION}/gradle-wrapper-${WRAPPER_VERSION}.jar"
    WRAPPER_DIR=${CLASSPATH%/*}
    mkdir -p "$WRAPPER_DIR" || die "Could not create wrapper directory: $WRAPPER_DIR"

    if command -v curl >/dev/null 2>&1 ; then
        curl -fL "$WRAPPER_URL" -o "$CLASSPATH" || die "Failed to download Gradle wrapper from $WRAPPER_URL"
    elif command -v wget >/dev/null 2>&1 ; then
        wget -O "$CLASSPATH" "$WRAPPER_URL" || die "Failed to download Gradle wrapper from $WRAPPER_URL"
    else
        die "Cannot download Gradle wrapper because neither curl nor wget is available"
    fi
}

cygwin=false
msys=false
darwin=false
nonstop=false
case "$(uname)" in
  CYGWIN* ) cygwin=true ;;
  MINGW* | MSYS* ) msys=true ;;
  Darwin* ) darwin=true ;;
  NONSTOP* ) nonstop=true ;;
esac

if [ -n "$JAVA_HOME" ] ; then
    JAVACMD="$JAVA_HOME/bin/java"
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME"
    fi
else
    JAVACMD="java"
fi

if ! $cygwin && ! $darwin && ! $nonstop ; then
    MAX_FD_LIMIT=$( ulimit -H -n )
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" ] || [ "$MAX_FD" = "max" ] ; then
            MAX_FD=$MAX_FD_LIMIT
        fi
        ulimit -n $MAX_FD || warn "Could not set maximum file descriptor limit: $MAX_FD"
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

if $cygwin || $msys ; then
    APP_HOME=$( cygpath --path --mixed "$APP_HOME" )
    CLASSPATH=$( cygpath --path --mixed "$CLASSPATH" )
    JAVACMD=$( cygpath --unix "$JAVACMD" )
fi

ensure_wrapper_jar

exec "$JAVACMD" $DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS -Dorg.gradle.appname=$APP_BASE_NAME -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
